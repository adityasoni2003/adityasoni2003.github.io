---
const { blog } = Astro.props;
---

<a
  href={blog.url}
  target="_blank"
  class="card p-6 block hover:-translate-y-1 transition"
>
  <img
    src={blog.thumbnail}
    alt={blog.title}
    class="mb-4 h-40 w-full rounded-lg object-cover"
  />

  <span class="text-xs uppercase text-blue-600 font-semibold">
    {blog.topic}
  </span>

  <h3 class="mt-2 text-lg font-semibold">{blog.title}</h3>

  <p class="mt-2 text-sm text-zinc-600">
    {blog.description}
  </p>

  <p class="mt-4 text-xs text-zinc-400">
    Published on {blog.date}
  </p>
</a>
