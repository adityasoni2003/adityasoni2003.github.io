---
import type { Project } from "../lib/types";

// Tell TypeScript the props shape
interface FeaturedProjectsProps {
  projects: Project[];
}

// Type-safe destructuring
const { projects } = Astro.props as FeaturedProjectsProps;
---

<section class="my-12">
  <h2 class="text-3xl font-bold mb-6 dark:text-zinc-100">Featured Projects</h2>
  <div class="grid gap-6 md:grid-cols-2">
    {projects.map((project) => (
      <div class="card p-4 flex flex-col justify-between hover:scale-105 transition-transform dark:bg-zinc-900">
        <img
          src={project.thumbnail}
          alt={project.title}
          class="w-full h-48 object-cover rounded-md mb-4"
        />
        <div>
          <span class="text-sm text-zinc-500 dark:text-zinc-400">{project.date}</span>
          <h3 class="mt-2 text-xl font-semibold dark:text-zinc-100">{project.title}</h3>
          <p class="mt-1 text-zinc-700 dark:text-zinc-300">{project.description}</p>
        </div>
        <div class="mt-4 flex gap-4 items-center">
          <a
            href={project.liveUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-1 bg-blue-600 dark:bg-blue-500 text-white rounded font-medium hover:bg-blue-700 dark:hover:bg-blue-600 transition"
          >
            Live Demo
          </a>
          {project.githubUrl && (
            <a
              href={project.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="px-4 py-1 bg-zinc-300 dark:bg-zinc-700 text-zinc-800 dark:text-zinc-100 rounded font-medium hover:bg-zinc-400 dark:hover:bg-zinc-600 transition"
            >
              GitHub
            </a>
          )}
        </div>
      </div>
    ))}
  </div>
  <div class="mt-6 text-center">
    <a
      href="/projects"
      class="px-6 py-2 rounded bg-blue-600 dark:bg-blue-500 text-white font-semibold hover:bg-blue-700 dark:hover:bg-blue-600 transition"
    >
      View All Projects
    </a>
  </div>
</section>
