---
import type { FeaturedProjectsProps } from "../lib/types";

import ProjectCard from "../react/ProjectCard";

// Type-safe destructuring
const { projects } = Astro.props as FeaturedProjectsProps;
---

<section class="px-4 pt-5 pb-10 max-w-236 xl:pt-10 xl:pb-18 mx-auto">
  <!-- Heading + CTA in one line -->
  <div class="mb-6 flex items-center justify-between flex-wrap gap-2">
    <h2 class="text-xl md:text-3xl heading font-bold ">
      Featured Projects
    </h2>

    <a
      href="/projects"
      class="cta ml-2"
    >
      View All
      <span class="transition-transform group-hover:translate-x-1">â†’</span>
    </a>
  </div>

  <!-- Projects grid -->
  <div class="grid gap-6 md:grid-cols-2 p-4">
    {projects.map((project, index) => (
      <ProjectCard project={project} index={index} client:load />
    ))}
  </div>
</section>

