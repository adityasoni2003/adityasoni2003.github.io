---
import type { Blog } from "../lib/types";

interface FeaturedBlogsProps {
  blogs: Blog[];
}

const { blogs } = Astro.props as FeaturedBlogsProps;
---
<section class="my-12">
  <h2 class="text-3xl font-bold mb-6 dark:text-zinc-100">Featured Blogs</h2>
  <div class="grid gap-6 md:grid-cols-2">
    {blogs.map((blog) => (
      <div
        class="card p-4 flex flex-col justify-between hover:scale-105 transition-transform dark:bg-zinc-900"
      >
        <img
          src={blog.thumbnail}
          alt={blog.title}
          class="w-full h-48 object-cover rounded-md mb-4"
        />
        <div>
          <span class="text-sm text-zinc-500 dark:text-zinc-400">{blog.date} · {blog.topic}</span>
          <h3 class="mt-2 text-xl font-semibold dark:text-zinc-100">{blog.title}</h3>
          <p class="mt-1 text-zinc-700 dark:text-zinc-300">{blog.description}</p>
        </div>
        <a
          href={blog.url}
          target="_blank"
          rel="noopener noreferrer"
          class="mt-4 inline-block text-blue-600 dark:text-blue-400 font-medium hover:underline"
        >
          Read More →
        </a>
      </div>
    ))}
  </div>
  <div class="mt-6 text-center">
    <a
      href="/blogs"
      class="px-6 py-2 rounded bg-blue-600 dark:bg-blue-500 text-white font-semibold hover:bg-blue-700 dark:hover:bg-blue-600 transition"
    >
      View All Blogs
    </a>
  </div>
</section>
